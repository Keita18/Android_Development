<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="knowledge"
            type="com.example.studenttimemanagement.model.Knowledge" />
        <variable
            name="listener"
            type="com.example.studenttimemanagement.ui.home.KnowledgeClickListener" />
    </data>

    <LinearLayout
        android:onClick="@{() -> listener.onClick(knowledge)}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idKnowledge"
            android:text="@{String.valueOf(knowledge.id)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/name"
            android:text="@{knowledge.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>
</layout>